output=lt-square-column|lt|F|F|none
mode=average-median|average|F|F|none
Numbers=2
processors=1|T|none
iters=1000|F|none
String=3
label=|F|none
subsample=|F|none
groups=|F|none
inputGroupNames=0
inputTypes=shared
shared=T|T|none|none|none|phylip
